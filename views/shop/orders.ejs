<%- include('../includes/navigation.ejs') %>
<main>
    <% if(orders.length <= 0){ %>
        <h2>Nothing there! Need to work on it.</h2>
    <% }else{ %>
        <ul>
            <% orders.forEach(order =>{ %>
                <li>
                    <h1># <%= order.id %></h1>
                    <ul>
                        <% order.products.forEach(product => { %>
                            <li><%= product.title %>(<%=product.orderItem.quantity %>) </li>
                        <% }) %>
                    </ul>
                </li>
            <% }); %>
        </ul>
    <% } %>
</main>

