<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/admin/<% if(editing){ %>edit-product<% }else { %>add-product<% } %>" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<% if(product){ %><%= product.title %><% } %>">
            </div>
            <div class="form-control">
                <label for="imageUrl">imageUrl</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<% if(product){ %><%= product.imageUrl %><% } %>">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" value="<% if(product){ %><%= product.price %><% } %>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5"><% if(product){ %><%= product.description %><% } %></textarea>
            </div>
            <% if(editing){ %>
                <input type="hidden" name="productId" value="<%= product.id %>" >
            <% } %>

            <button class="btn" type="submit"><% if(!editing){ %>Add Product<% }else { %>Update Product<% } %></button>
        </form>
    </main>

    <%- include('../includes/tail.ejs') %>